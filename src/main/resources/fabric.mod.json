{
	"schemaVersion": 1,
	"id": "tierscaledbattles",
	"version": "${version}",
	"name": "Cobblemon Tier-Scaled Battles",
	"description": "Adds a Tier-Scaled level battle option in which each pokemon's level is set based upon their Smogon Nation Dex tier. Stronger pokemon become lower level and weaker pokemon become higher level, making more pokemon competitively viable.",

	"authors": [
		"Dawson Matthews"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/Dawsani/Cobblemon-Tier-Scaled-Battles"
	},
	"license": "CC0-1.0",
	"icon": "assets/tierscaledbattles/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "com.dawsonmatthews.tierscaledbattles.TierScaledBattles"
			}
		],
		"client": [
			{
				"value": "com.dawsonmatthews.tierscaledbattles.TierScaledBattlesClient"
			}
		]
	},
	"mixins": [
		"tierscaledbattles.mixins.json",
		{
			"config": "tierscaledbattles.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~1.21.1",
		"java": ">=21",
		"fabric-api": "*",
		"fabric-language-kotlin": "*",
		"cobblemon": "*"
	}
}